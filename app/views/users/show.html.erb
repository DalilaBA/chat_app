<div class="ui grid center aligned container"style="high: 500px ">
  <div class="row centered">
    <div class="ui card">
      <div class="image">
        <%= image_tag ("avatar.png") %>
      </div>
      <div class="content">
        <a class="header"><%= @user.username %></a>
        <div class="meta">
          <span class="date">Joinded at <%= time_ago_in_words(current_user.created_at) %></span>
        </div>
        <div class="description">
          Kristy is an art director living in New York.
        </div>
      </div>
      <div class="extra content">
        <a>
          <i class="user icon"></i>
          22 Friends
        </a>
      </div>
      <hr>
      <div class="two column container">
        <div class="row centered">
        <%= link_to "Edit", edit_user_path(current_user),class: "ui column primary button"  %>
        <% if current_user.id == @user.id %>
        <%= link_to "Delete", user_path(current_user),class: "ui column button", method: :delete, data: {confirm: "are you sure?!"}  %>
        <%end %>
      </div>
          <br>

    </div>
  </div>
</div>