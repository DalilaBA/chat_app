<div class="ui middle aligned center aligned grid">
  <div class="column">
   <div class="ui placeholder segment " >
      <div class="ui very relaxed stackable grid">
          <div class="column">
            <%= form_with(model: @user,class: "ui form", local: true) do |f| %>
                    <div class="field">
                      <%= f.label :username %>
                      <div class="ui left icon input">
                        <%= f.text_field :username, placeholder: "Username" %>
                        <i class="user icon"></i>
                      </div>
                    </div>

                    <div class="field">
                      <%= f.label :password %>
                      <div class="ui left icon input">
                        <%= f.password_field :password, placeholder: "Password" %>
                        <i class="lock icon"></i>
                      </div>
                    </div>
                    <%= f.submit(@user.new_record? ? "Sign Up" : "update account" ,class: "ui orange submit button" )%>
                    
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>