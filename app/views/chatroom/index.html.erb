<h4 class="ui center aligned icon header">
  <i class=" orange circular comments icon"></i>
  Say something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
         <div class="ui comments">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content">
              <%= form_for(@message, html: {class: "ui reply form"}, url: message_path) do |f| %>
                <div class="field">
                  <div class="ui fluid icon input">
                    <%= f.text_field :body %>
                    <%= f.button '<i class=" bordered inverted orange edit icon edit"></i>'.html_safe %>
                     
                  </div>
                </div>
              <% end %>
            </div>
      </div>
    </div>
   

  <div class="four wide column">
  <div class="ui fluid raied card chatbox"> 
    <div class="content">
    <div class="ui vertical text menu">
      <div class="header item">Sort By</div>
        <a class="active item">
          Closest
        </a>
        <a class="item">
          Most Comments
        </a>
        <a class="item">
          Most Popular
        </a>
    </div>
  </div>
    </div>
  </div>
    
</div>